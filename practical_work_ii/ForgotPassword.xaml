<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="practical_work_ii.ForgotPasswordPage"
             Title="Forgot your Password?">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Recover Password" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="emailEntry" Placeholder="Introduce your email" />

        <Button Text="Send" Clicked="OnSendClicked" />
    </VerticalStackLayout>
</ContentPage>
