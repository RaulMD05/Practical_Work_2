<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="practical_work_ii.UserInfo"
             Title="Información del Usuario"
             Padding="20">

    <StackLayout Spacing="15">

        <Label Text="Nombre:" FontAttributes="Bold" />
        <Label x:Name="nameLabel" />

        <Label Text="Usuario:" FontAttributes="Bold" />
        <Label x:Name="usernameLabel" />

        <Label Text="Contraseña:" FontAttributes="Bold" />
        <Label x:Name="passwordLabel" />

        <Label Text="Operaciones realizadas:" FontAttributes="Bold" />
        <Label x:Name="operationsCountLabel" />

        <Button Text="Volver" Clicked="OnBackClicked" BackgroundColor="#44bb44" TextColor="White"/>

    </StackLayout>
</ContentPage>
