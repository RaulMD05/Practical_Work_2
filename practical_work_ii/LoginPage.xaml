<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="practical_work_ii.LoginPage"
             Title="Login">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Iniciar Sesión" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="usernameEntry" Placeholder="Usuario" />
        <Entry x:Name="passwordEntry" Placeholder="Contraseña" IsPassword="True" />

        <Button Text="Iniciar Sesión" Clicked="OnLoginClicked" />

        <Label x:Name="registerLabel" Text="¿No tienes cuenta? Regístrate"
               TextColor="Blue" HorizontalOptions="Center" />

        <Label x:Name="forgotLabel" Text="¿Olvidaste tu contraseña?"
               TextColor="Blue" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
